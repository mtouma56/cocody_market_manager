# Uncomment this line to define a global platform for your project
# platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

def apply_plugin_patches(installer)
  patches = {
    'file_picker' => 'file_picker_ios_fix.patch',
    'flutter_local_notifications' => 'flutter_local_notifications_plugin.patch',
  }

  patches.each do |plugin, patch_file|
    patch_path = File.join(__dir__, 'patches', patch_file)
    next unless File.exist?(patch_path)

    plugin_dir = File.join(installer.sandbox.root, '.symlinks', 'plugins', plugin)
    next unless Dir.exist?(plugin_dir)

    Dir.chdir(plugin_dir) do
      result = system('patch', '-p1', '-N', '-i', patch_path)
      raise "Failed to apply patch #{patch_file}" unless result
    end
  end
end

def apply_pod_patches(installer)
  patch_path = File.join(__dir__, 'patches', 'dkimageassetexporter_sendable_fix.patch')
  return unless File.exist?(patch_path)

  pod_dir = File.join(installer.sandbox.root, 'Pods', 'DKImagePickerController')
  return unless Dir.exist?(pod_dir)

  Dir.chdir(pod_dir) do
    result = system('patch', '-p1', '-N', '-i', patch_path)
    raise "Failed to apply patch #{patch_path}" unless result
  end
end


post_install do |installer|
  swift5_targets = [
    'DKImagePickerController',
    'DKPhotoGallery',
  ]

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    next unless swift5_targets.include?(target.name)

    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['SWIFT_STRICT_CONCURRENCY'] = 'minimal'
    end
  end

  apply_plugin_patches(installer)
  apply_pod_patches(installer)
end
